{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2022",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/tests/**/*.ts"],
  "exclude": ["node_modules", "build/**/*"]
}
